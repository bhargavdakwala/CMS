#slider img {
    position:absolute;
    top:0px;
    left:0px;
    margin-bottom:16px;
    display:none;
    width:958px;
    height:240px;
}
#slider a {
    border:0;
    display:block;
}

.nivo-controlNav {
   /* background:url(images/controlnav.png) no-repeat;*/ /* Background for the bullets */
    width:251px;
    height:40px;
    position:absolute;
    left:0px; /* Manually position in centre. Not perfect :( */
    /*bottom:-42px;*/
    padding:8px 0 0 0px;
    z-index:20; /* Make sure it is visible above the slides */
}
.nivo-controlNav a {
    display:block;
    width:22px;
    height:22px;
    background:url(../../images/bullets.png) no-repeat;
    text-indent:-9999px;
    border:0;
    left:13px;
    top:7px;
    /*margin-right:3px;*/
    float:left;
   
}
.nivo-controlNav a.active {
    background-position:0 -22px; /* Selected bullet */
}

.nivo-caption {
    bottom:25px; /* Vertically centre the captions */
    left:auto;
    right:0px; /* Put them on the right */
    width:auto;
    max-width:630px;
    overflow:hidden;
    /*background:#fff;*/
   
    font-family: 'Anton', arial, serif; /* Using a Google Font (not required) */
   /* color:red;*/
}
.nivo-caption p {
   padding:5px 11px;
   
}
.nivo-caption a { 
    color:#4d4d4f;
    /*font-weight:bold;*/
    font-size:12px;
    margin-right:8px;
    font-style:italic;
